<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.view.FrgCalculadora">
    <TextView
        android:id="@+id/tvoperation"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="50sp"
        android:paddingTop="14sp"
        android:background="#E1E1E1"/>

   <RelativeLayout
       android:layout_marginTop="50dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/btnone"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="20dp"
           android:text="@string/one"
           android:textSize="30sp"/>

       <Button
           android:id="@+id/btntwo"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="115dp"
           android:text="2"
           android:textSize="30sp"/>

       <Button
           android:id="@+id/btnthree"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="210dp"
           android:text="3"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnless"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="305dp"
           android:text="borrar"
           android:textSize="12sp"/>
       <Button
           android:id="@+id/btnfour"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@+id/btnone"
           android:layout_marginLeft="20dp"
           android:text="4"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnfive"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@+id/btntwo"
           android:layout_marginLeft="115dp"
           android:text="5"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnsix"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@id/btnthree"
           android:layout_marginLeft="210dp"
           android:text="6"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnplus"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="305dp"
           android:text="+"
           android:textSize="40sp"
           android:layout_below="@+id/btnless"/>
       <Button
           android:id="@+id/btnseven"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@id/btnfour"
           android:layout_marginLeft="20dp"
           android:text="7"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btneight"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@+id/btnfive"
           android:layout_marginLeft="115dp"
           android:text="8"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnnine"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@+id/btnsix"
           android:layout_marginLeft="210dp"
           android:text="9"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btndiv"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="305dp"
           android:layout_below="@+id/btnplus"
           android:text="/"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnzero"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_below="@id/btneight"
           android:layout_marginLeft="115dp"
           android:text="0"
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnequals"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="210dp"
           android:layout_below="@+id/btnnine"
           android:text="="
           android:textSize="30sp"/>
       <Button
           android:id="@+id/btnmult"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginLeft="305dp"
           android:layout_below="@+id/btndiv"
           android:text="x"
           android:textSize="30sp"/>

   </RelativeLayout>

</LinearLayout>